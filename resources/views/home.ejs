<section class="hero py-16">
    <div class="container mx-auto flex items-center justify-between content-center">
        <div class="w-1/2 ml-12">
            <h6 class="text-xl tracking-wide ml-2"><em>Are you hungry ?</em></h6>
            <h1 class="text-7xl font-bold">Don't wait!</h1>
            <button class="px-6 py-2 rounded-full text-white font-bold mt-4 tracking-wider btn-primary">Order
                Now</button>
        </div>
        <div class="w-1/2 mr-12">
            <img src="/img/pizza/img/hero-pizza.png" alt="hero-pizza">
        </div>
    </div>
</section>

