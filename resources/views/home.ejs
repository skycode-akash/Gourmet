                        <h2 class="mb-4 text-lg"><%= pizza.name %></h2>
                        <span class=" size py-1 px-4 rounded-full uppercase text-xs"><%= pizza.size %></span>
                        <div class="flex item-center justify-around mt-6">
                            <span class="font-bold text-lg">₹<%= pizza.price %></span>
                            <button class="add-to-cart py-1 px-6 rounded-full flex items-center">
                                <span> <b> + </b> </span>
                                <span class="ml-4"> <b> add </b> </span>
                            </button>
                        </div>
                    </div>
                </div>
